<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebTools</title>
    @await Html.PartialAsync("_DataTablesStyles")
    @await Html.PartialAsync("_GlobalStyles")
    <link rel="stylesheet" href="~/css/site_default.css">
</head>
<body class="control-sidebar-slide-open layout-navbar-fixed sidebar-collapse">
    <div class="wrapper">
        @if (User.Identity.IsAuthenticated)
        {
            <header>
                <nav class="main-header navbar navbar-expand navbar-dark border-bottom-0">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="navbar-brand" role="button" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/images/logo_compact_white_200x200.png" width="38" height="38" style="vertical-align: middle;" alt="">
                            </a>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        @*<li class="nav-item d-none d-sm-inline-block">
                                <a class="nav-link" asp-area="" asp-controller="Report" asp-action="Index">Module Khám bệnh CXK</a>
                            </li>*@
                        <li class="nav-item dropdown dropdown-hover">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Module KB Cơ xương khớp</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                <li><a asp-area="" asp-controller="ChoKham" asp-action="TongQuanKhamBenh" class="dropdown-item">Danh sách đăng ký khám bệnh</a></li>
                                <li class="nav-item dropdown-submenu dropdown-hover">
                                    <a asp-area="" asp-controller="CoXuongKhop" asp-action="PhieuKhamBenh" class="dropdown-item">Phiếu khám bệnh</a>
                                    <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="PhieuKhamBenh" class="dropdown-item">Chi tiết khám bệnh</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="DanhGiaASDAS" class="dropdown-item">Đánh giá ASDAS</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="DanhGiaDAPSA" class="dropdown-item">Đánh giá DAPSA</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="DanhGiaPASI" class="dropdown-item">Đánh giá PASI</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="ChiDinh" class="dropdown-item">Chỉ định</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="DanhSachDonThuoc" class="dropdown-item">Đơn thuốc</a></li>
                                        <li><a asp-area="" asp-controller="CoXuongKhop" asp-action="XuTri" class="dropdown-item">Xử trí</a></li>
                                    </ul>
                                </li>
                                <li><a asp-area="" asp-controller="Reports" asp-action="PhieuKhamBenh" class="dropdown-item">Report phiếu khám bệnh</a></li>
                            </ul>
                        </li>
                        <li class="nav-item d-none d-sm-inline-block">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Permission">Phân quyền</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <partial name="_LoginStatusPartial" />
                        </li>
                    </ul>
                </nav>
            </header>
            <div class="content-wrapper">
                @RenderBody()
            </div>
            <div id="myPopup"></div>
        }
        @await Html.PartialAsync("_GlobalScripts")
        @await Html.PartialAsync("_DataTablesScripts")
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
        <script>
            (function () {
                document.querySelector('body').dispatchEvent(new Event('scriptsLoaded'));
            })();
        </script>
    </div>
</body>
</html>
